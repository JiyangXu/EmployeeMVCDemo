@model IEnumerable<Employee>



<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Category List</h2>
        </div>
        <div class="col-6 text-right">
            <a asp-controller="Employee" asp-action="Create" class="btn btn-primary" >
            Create New Employee
            </a>
        </div>
    </div>
    <br/>
    
    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped" style="width: 100%">
        <thead>
        <tr>
            <th>
                Employee Name
            </th>
            <th>
                Employee Age
            </th>
            <th></th>
        </tr>
        </thead>
        <tbody>
        @foreach (var obj in Model)
        {
            <tr>
                <td style="width:50%">
                    @obj.Name
                </td>
                <td style="width:30%">
                    @obj.Age
                </td>
                <td class="text-center">
                    <div class="w-75 btn-group" role="group">
                        <a asp-controller="Employee" asp-route-Id="@obj.Id" asp-action="Edit" class="btn btn-primary mx-2">Edit</a>
                        <a asp-controller="Employee" asp-route-Id="@obj.Id" asp-action="Delete" class="btn btn-danger mx-2">Delete</a>
                    </div>
                </td>
            </tr>
        }
        </tbody>
        </table>
    }
</div>

